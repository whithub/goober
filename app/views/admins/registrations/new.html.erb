<div class="row">
  <div class="col-md-4"></div>

  <div class="col-md-4">
    <div class="form-new-user">
      <h2 class="form-new-user-heading">Sign Up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :name %>
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :phone_number %>
          <%= f.text_field :phone_number, autofocus: true, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :car_make %>
          <%= f.text_field :car_make, autofocus: true, class: "form-control"  %>
        </div>

        <div class="field">
          <%= f.label :car_model %>
          <%= f.text_field :car_model, autofocus: true, class: "form-control"  %>
        </div>

        <div class="field">
          <%= f.label :car_passenger_capacity %>
          <%= f.number_field :car_passenger_capacity, autofocus: true, class: "form-control"  %>
        </div>


        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div><br>

        <div class="field">
          <%= render "devise/shared/links" %>
        </div><br>

        <div class="actions">
          <%= f.submit "Sign up", class: "btn btn-default" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-4"></div>
</div>
