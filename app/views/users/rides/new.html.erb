<div class="row">
  <div class="col-md-4"></div>

  <div class="col-md-4">
    <div class="form-new-user">
      <h2 class="form-new-user-heading">Enter Info below to reserve a ride </h2>

      <%= form_for @ride, url: users_rides_path do |f| %>
        <%#= devise_error_messages! %>

        <div class="field">
          <%= f.label :pick_up_location, "Pick Up Location" %>
          <%= f.text_field :pick_up_location, autofocus: true, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :drop_off_location, "Drop Off Location" %><br />
          <%= f.text_field :drop_off_location, autofocus: true, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :num_of_passengers, "Number of Passengers" %>
          <%= f.number_field :num_of_passengers, autofocus: true, class: "form-control" %>
        </div><br>

        <div class="actions">
          <%= f.submit "Request Ride", class: "btn btn-default"%>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-4"></div>
</div>


